package textStat;
import java.io.*;

public class nyTextStatistik {

	public static void main(String[] args) {
		BufferedReader input = new  BufferedReader (new FileReader("src/textStat/text.txt"));
		
		String bokstaver = "abcdefghijklmnopqrstuvwxyzåäöABCDEFGHIJKLMNOPQRSTUVWXYZÅÄÖ";
		String skiljetecken = ".,)(:;-";
		String mellanslag = " ";
		String meningsAvslutning = ".!?";
		
		int antalBokstaver = 0;
		int antalSkiljetecken = 0;
		int antalOrd = 0;
		int antalMeningar = 0;
			
		
		while (input.ready()) {
			int intChar = input.read();
			char character = (char) intChar;
		}
		
		public static boolean memberOf (char character, String bokstaver, String skiljetecken, 
				String mellanslag, String meningsAvslutning) {
			
		}
		if (memberOf)character, bokstaver) {
			antalbokstaver++;
		}
		if (memberOf)character, skiljetecken) {	
			antalSkiljetecken++;
		}
		if (memberOf)character, mellanslag) {
			antalord++;
		}
		if (memberOf)character, meningsAvslutning) {
			antalmeningar++;
		}
		
		
		}
		System.out.println(antalBokstaver);

	}


